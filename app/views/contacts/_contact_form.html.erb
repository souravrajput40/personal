<%= form_tag("/send_message", :method => "post", remote: true) do %>
  <div class="row">
    <div class="col-md-4 col-lg-6 field my-3">
      <%= text_field_tag :name,'', class: 'form-control', placeholder: 'YOUR NAME', required: true %>
    </div>
    <div class="col-md-4  col-lg-6 field my-3">
      <%= email_field_tag :phone_number,'', class: 'form-control', placeholder: 'YOUR PHONE NUMBER', required: true %>
    </div>
    <div class="col-md-4 col-lg-6 field my-3">
      <%= email_field_tag :email,'', class: 'form-control', placeholder: 'YOUR EMAIL', required: true %>
    </div>
    <div class="col-md-12 col-lg-12 field my-3">
      <%= text_field_tag :subject,'', class: 'form-control', placeholder: 'YOUR SUBJECT' %>
    </div>
    <div class="col-md-12 col-lg-12 field my-3">
      <%= text_area_tag :message,'', class: 'form-control form-message', placeholder: 'YOUR MESSAGE', required: true %>
    </div>
    <div class="col-md-12 col-lg-12 submit-button" >
      <%= button_tag 'Send Message', class: 'btn w-100 mb-3 btn btn-outline text-white fs-5 d-grid gap-2 d-md-block', style:"background-color: rgba(255,99,98,255);" %>
    </div>
  </div>
<% end %>
